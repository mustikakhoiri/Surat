<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCreateMessage2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Surat\t\t\t\:" />

                <Spinner
                    android:id="@+id/jenis_surat"
                    android:entries="@array/pilihjenis_surat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Dosen\t\t:" />

                <Spinner
                    android:id="@+id/nama_dosen"
                    android:entries="@array/pilihnama_dosen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kepada\t\t\t\t\t\t:" />

                <EditText
                    android:id="@+id/instansi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Instansi / Mitra" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Survei\t:" />

                <EditText
                    android:id="@+id/tanggalsurvei"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_height="wrap_content"
                    android:hint="dd/MM/yyyy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat\t\t:" />

                <EditText
                    android:id="@+id/isialamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukan Alamat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keterangan\t\t:" />

                <EditText
                    android:id="@+id/isiketerangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukan Keterangan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIM Pengaju\t\t:" />

                <EditText
                    android:id="@+id/nimpengaju"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NIM" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anggota Ke-1"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIM\t\t:"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:id="@+id/nimanggota1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NIM Anggota" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama\t\t:" />

                <EditText
                    android:id="@+id/namaanggota1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Anggota" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anggota Ke-2"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIM\t\t:"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:id="@+id/nimanggota2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NIM Anggota" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama\t\t:" />

                <EditText
                    android:id="@+id/namaanggota2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Anggota" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anggota Ke-3"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIM\t\t:"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:id="@+id/nimanggota3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NIM Anggota" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama\t\t:" />

                <EditText
                    android:id="@+id/namaanggota3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Anggota" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anggota Ke-4"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIM\t\t:"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:id="@+id/nimanggota4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NIM Anggota" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama\t\t:" />

                <EditText
                    android:id="@+id/namaanggota4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Anggota" />

                <Button
                    android:id="@+id/simpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SIMPAN" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="===== HASIL INPUT ====="
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/hasil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>