<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryDetailActivity">

    <TableRow
        android:paddingTop="10px"
        android:gravity="center"
        android:layout_marginTop="20px">

        <TextView
            android:id="@+id/DetailSurat"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_span="2"
            android:text="Detail Surat"
            android:textColor="#2196F3"
            android:textSize="25sp"
            android:textStyle="bold"
            />
    </TableRow>
    <TableRow
        android:layout_marginTop="20dip">
        <TextView
            android:layout_width="wrap_content"
            android:text="ID Surat       :"
            android:textColor="#000000"
            android:layout_marginLeft="20dip"
            ></TextView>

        <TextView
            android:id="@+id/text_id_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:text="TextView" />
    </TableRow>
    <TableRow
        android:layout_marginTop="20dip">
        <TextView
            android:layout_width="wrap_content"
            android:text="Jenis Surat    :"
            android:textColor="#000000"
            android:layout_marginLeft="20dip"
            ></TextView>

        <TextView
            android:id="@+id/text_jenis_surat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:text="TextView" />
    </TableRow>
    <TableRow
        android:layout_marginTop="20dip">
        <TextView
            android:layout_width="wrap_content"
            android:text="Dosen          :"
            android:textColor="#000000"
            android:layout_marginLeft="20dip"
            ></TextView>

        <TextView
            android:id="@+id/text_dosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:text="TextView" />
    </TableRow>

    <TableRow
        android:layout_marginTop="20dip">
        <TextView
            android:layout_width="wrap_content"
            android:text="Tujuan Surat   :"
            android:textColor="#000000"
            android:layout_marginLeft="20dip"
            ></TextView>

        <TextView
            android:id="@+id/text_nama_mitra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:text="TextView" />
    </TableRow>
    <TableRow
        android:layout_marginTop="20dip">
        <TextView
            android:layout_width="wrap_content"
            android:text="Anggota        :"
            android:textColor="#000000"
            android:layout_marginLeft="20dip"
            ></TextView>

        <TextView
            android:id="@+id/text_anggota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:text="TextView" />
    </TableRow>

</TableLayout>